<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>StepOpne Campaign Manager</title>
    <base href="/">

    <script src="https://global.oktacdn.com/okta-signin-widget/3.1.3/js/okta-sign-in.min.js" type="text/javascript"></script>
    <link href="https://global.oktacdn.com/okta-signin-widget/3.1.3/css/okta-sign-in.min.css" type="text/css" rel="stylesheet"/>

    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
</head>

<body>
<!-- Render the login widget here -->
<div id="okta-login-container"></div>

<script src="/static/js/jquery-3.3.1.min.js"></script>
<script src="/static/js/cookies.js"></script>
<script src="/static/js/popper.min.js"></script>
<script src="/static/js/bootstrap.min.js"></script>
<script>
  var signIn = new OktaSignIn({
        baseUrl: '{{endpoint}}',
        clientId: '{{clientId}}',
        redirectUri: window.location.protocol + '//' + window.location.host,
        authParams: {
          issuer: '{{endpoint}}/oauth2/default',
          responseType: ['id_token', 'token'],
          scopes: ["openid", "profile", "email"]
        }});
  signIn.renderEl({
    el: '#okta-login-container'
  }, function success(res) {
    if (res.status === 'SUCCESS') {
        Cookies.set("sone-token", res[1].accessToken, { expires: 7, path: '/' });
    }
    window.location = "/";
  });
</script>
</body>
</html>

